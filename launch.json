// .vscode/launch.json
{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "chrome",
      "request": "launch",
      "name": "Launch React App",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}/src",
      "breakOnLoad": true,
      "sourceMaps": true,
      "skipFiles": ["<node_internals>/**"],
      "runtimeArgs": [
        "--remote-debugging-port=9222"
      ]
    }
  ]
}
